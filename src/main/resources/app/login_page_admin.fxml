<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import java.net.URL?>
<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginControllerAdmin">
   <stylesheets>
      <URL value="@../styles/style.css" />
   </stylesheets>
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="16.0">
         <children>
            <VBox alignment="CENTER" spacing="8.0">
               <children>
                  <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/up_logo.png" />
                     </image>
                     <VBox.margin>
                        <Insets bottom="16.0" />
                     </VBox.margin>
                  </ImageView>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="%lblTitle" textAlignment="CENTER">
                     <font>
                        <Font size="32.0" />
                     </font>
                  </Text>
                  <Text fill="#555555" strokeType="OUTSIDE" strokeWidth="0.0" text="%lblSubtitle2">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
               </children>
            </VBox>
            <VBox alignment="CENTER" fillWidth="false" spacing="16.0">
               <children>
                  <Text fx:id="txtErrorMessage" fill="#fc4e4e" strokeType="OUTSIDE" strokeWidth="0.0">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
                  <TextField fx:id="txtUsername" prefWidth="350.0" promptText="Admin username" style="-fx-border-radius: 8px; -fx-border-color: #dbdbdb; -fx-background-color: #ffffff; -fx-background-radius: 8px;">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" left="16.0" right="16.0" top="10.0" />
                     </padding></TextField>
                  <PasswordField fx:id="pwdPassword" prefWidth="350.0" promptText="Password" style="-fx-background-radius: 8px; -fx-border-radius: 8px; -fx-border-color: #dbdbdb; -fx-background-color: #ffffff;">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <padding>
                        <Insets bottom="10.0" left="16.0" right="16.0" top="10.0" />
                     </padding>
                  </PasswordField>
                  <Button fx:id="btnLogin" styleClass="button-green" mnemonicParsing="false" onMouseClicked="#handleLoginAdminClick" style="-fx-background-color: #2dd4bf; -fx-background-radius: 8px; -fx-border-color: #14b8a6; -fx-border-radius: 8px; -fx-background-insets: 0; -fx-cursor: hand;" text="Log in" textFill="#f0f9ff">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <padding>
                        <Insets bottom="6.0" left="32.0" right="32.0" top="6.0" />
                     </padding></Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
